{
  "name": "boldr",
  "version": "0.1.0-alpha.3",
  "description": "a bold cms.",
  "main": "tools/scripts/server.js",
  "scripts": {
    "build": "better-npm-run build",
    "build-dlls": "./node_modules/.bin/webpack --config tools/webpack/dlls/vendor/webpack.config.js",
    "clean": "rimraf build static/dist",
    "dev": "concurrently --kill-others \"npm run watch:client\" \"npm run start:dev\" \"npm run start:server\"",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint -c .eslintrc src server",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "postinstall": "npm run build",
    "seed": "node_modules/.bin/sequelize db:seed:all",
    "sequelize": "node_modules/.bin/sequelize",
    "start": "npm run start:prod",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start-prod",
    "start:server": "./node_modules/.bin/nodemon",
    "test": "./node_modules/.bin/mocha --compilers js:./compiler.babel --opts ./mocha.opts './src/**/*.test.js'",
    "test:watch": "./node_modules/.bin/mocha  -w --opts ./mocha.opts './src/**/*.test.js'",
    "watch:client": "better-npm-run watch:client",
    "validate": "./node_modules/.bin/webpack-validator tools/webpack/dev.config.js"
  },
  "betterScripts": {
    "build": {
      "command": "./node_modules/.bin/webpack --verbose --display-error-details --config tools/webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:prod": {
      "command": "npm run clean && node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "APIPORT": 8000
      }
    },
    "start:dev": {
      "command": "node ./tools/scripts/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIPORT": 8000
      }
    },
    "watch:client": {
      "command": "node tools/webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000,
        "APIPORT": 3030
      }
    }
  },
